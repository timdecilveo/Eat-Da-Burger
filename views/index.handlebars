<div class = "container">	
	<div>
		<a id = "image-here"><img src = "/../public/assets/img/burger-image.png"></a>
		<h1 style = "text-align: center"> Eat Da Burger! </h1>
	</div>

	{{!-- burger list before being eaten --}}
	<div class = "row">
		<div class = "col-md-4 col-md-offset-1">
			<div class = "panel-panel default">
				<ul class = "list-group">
				<p style = "text-align: center; font-size: 20px; font-weight: bold">Order Up!</p>
				{{#each burgers}}
					{{#unless this.devoured}}
					<li style = "background-color: #333; border-color: #333; color: #E8B92D;" class = "list-group-item">
						<div class = "input-group">
							<p style = "text-align: center; font-size: 15px;" class = "lead"> {{this.burger_name}} </p>
							<span class = "input-group-btn">
								<form action = "burgers/update/{{this.id}}?_method=PUT" method = "POST">
									<input type = "hidden" name = "devoured" value = "true">
									<button style = "background-color: #E8B92D; border-color: #333; color: #333;" class = "btn btn-dark" type = "submit"> Devour! </button>
									
								</form>
							</span>
						</div>
					</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>
	</div>


		{{!-- burger list after being eaten --}}
	
	<div class = "row">
		<div class = "col-md-4 col-md-offset-2">
			<p style = "text-align: center; font-size: 20px; font-weight: bold">Burgers you devoured.</p>
			<div style = "border-color: #333;" class = "panel panel-default">
				<ul class = "list-group">
				{{#each burgers}}
					{{#if this.devoured}}
					{{!--333  --}}
					<li style = "background-color: #333; border-color: #333; color: #E8B92D;" class = "list-group-item">
						<p style = "text-align: center; font-size: 15px;" class = "lead">{{this.burger_name}} </p>
					</li>
					{{/if}}
				{{/each}}
				</ul>
			</div>
		</div>
	</div>

	<div class = "col-md-10 col-md-offset-1">
		<p style = "text-align: center; font-size: 20px; font-weight: bold" class = "lead"> What's your next burger?!</p>

		{{!-- section to add burgers --}}
		<form class = "create-update-form" action = "burgers/create" method = "POST">

			<div class = "form-group">
				<textarea style = "background-color: #333; border-color: #333; color: #E8B92D;" class = "form-control input-lg" type = "text" name = "b_name" rows = "3"> </textarea>
			</div>

			<button style = "background-color: #333; border-color: #333; color: #E8B92D;" class = "btn btn-dark" type = "submit">Add Burger!</button>
		</form>
	</div>
</div>